<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminWelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adminFirstNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_admin"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/manageServicesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_services" />

        <Button
            android:id="@+id/deleteUsersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_and_delete_users" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>