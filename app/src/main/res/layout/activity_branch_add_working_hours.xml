                <TextView
                    android:id="@+id/youCanScrollTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/you_can_scroll_this_list_to_edit_working_hours_for_all_days_of_the_week"
