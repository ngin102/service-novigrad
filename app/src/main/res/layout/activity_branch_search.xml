<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BranchSearch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/branchSearchTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search for Branch"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/searchInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the type of search and fill in the requisite information."
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/searchOptions"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/searchChoiceRG"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/searchByAddressRB"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Address"
                    android:onClick="onRadioButtonClicked"/>/>

                <RadioButton
                    android:id="@+id/searchByHoursRB"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Working Hours"
                    android:onClick="onRadioButtonClicked"/>/>

                <RadioButton
                    android:id="@+id/searchByServiceRB"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Service"
                    android:onClick="onRadioButtonClicked"/>/>
            </RadioGroup>

            <Button
                android:id="@+id/searchButton"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Search"
                android:onClick="onSearchButtonClicked"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addressOption"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/searchInstructions3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the name of your city. There must be no spelling mistakes."
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/citySearch"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Oxenfurt"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/addressSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="221B Baker Street"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hoursOption"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/searchInstructions4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a date and time (24:00)."
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/timeDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/dayRG"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25">

                    <RadioButton
                        android:id="@+id/monButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Monday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/tuesButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tuesday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/wedButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Wednesday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/thurButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Thursday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/friButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Friday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/satButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Saturday"
                        android:onClick="setDayOnClick"/>

                    <RadioButton
                        android:id="@+id/sunButton"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Sunday"
                        android:onClick="setDayOnClick"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/hoursTextView"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Time you wish to visit:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/timeEditText"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="13:00 OR 15"
                    android:inputType="textPersonName" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/serviceOption"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/searchInstructions6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the type of search and fill in the requisite information."
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/serviceListLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/serviceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/serviceEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Health Card"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/branchList"
            android:layout_width="match_parent"
            android:layout_weight="1">

        </ListView>

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Back to previous menu"
            android:onClick="onBackButtonClicked"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>