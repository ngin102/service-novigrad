<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="@string/service_name"
            android:layout_width="match_parent"
            android:layout_height="25dp" android:id="@+id/serviceName" android:layout_weight="0"
    />
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"/>
    <Button
            android:text="@string/add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/addForm" android:layout_weight="1"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"/>
    <Button
            android:text="@string/add_doucement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/addDoucement" android:layout_weight="1"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"/>
</LinearLayout>